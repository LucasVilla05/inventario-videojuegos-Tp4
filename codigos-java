package inventario;

import inventario.modelo.*;
import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Inventario inventario = new Inventario();

        int opcion;
        do {
            System.out.println("\n===== MEN√ö PRINCIPAL =====");
            System.out.println("1. Agregar videojuego");
            System.out.println("2. Mostrar inventario");
            System.out.println("3. Buscar videojuego por t√≠tulo");
            System.out.println("4. Eliminar videojuego");
            System.out.println("5. Ordenar alfab√©ticamente");
            System.out.println("6. Detectar duplicados");
            System.out.println("0. Salir");
            System.out.print("Seleccione una opci√≥n: ");
            opcion = scanner.nextInt();
            scanner.nextLine(); // limpiar buffer

            switch (opcion) {
                case 1:
                    System.out.print("T√≠tulo: ");
                    String titulo = scanner.nextLine();
                    if (inventario.contiene(titulo)) {
                        System.out.println("¬°Este juego ya est√° en el inventario!");
                        break;
                    }
                    System.out.print("G√©nero: ");
                    String genero = scanner.nextLine();
                    System.out.print("Plataforma: ");
                    String plataforma = scanner.nextLine();
                    System.out.print("Fecha de adquisici√≥n (YYYY-MM-DD): ");
                    String fecha = scanner.nextLine();
                    System.out.print("Estado: ");
                    String estado = scanner.nextLine();
                    Videojuego nuevo = new Videojuego(titulo, genero, plataforma, fecha, estado);
                    inventario.agregar(nuevo);
                    System.out.println("‚úî Videojuego agregado.");
                    break;

                case 2:
                    System.out.println("üìã Inventario actual:");
                    inventario.mostrar();
                    break;

                case 3:
                    System.out.print("Ingrese t√≠tulo a buscar: ");
                    String buscar = scanner.nextLine();
                    boolean encontrado = false;
                    for (Videojuego vj : inventario.getLista()) {
                        if (vj.getTitulo().equalsIgnoreCase(buscar)) {
                            System.out.println("üîç Encontrado:");
                            vj.mostrar();
                            encontrado = true;
                        }
                    }
                    if (!encontrado) System.out.println("‚ùå No se encontr√≥ el videojuego.");
                    break;

                case 4:
                    System.out.print("T√≠tulo del juego a eliminar: ");
                    String eliminar = scanner.nextLine();
                    boolean eliminado = inventario.eliminar(eliminar);
                    if (eliminado) {
                        System.out.println("üóëÔ∏è Juego eliminado.");
                    } else {
                        System.out.println("‚ùå Juego no encontrado.");
                    }
                    break;

                case 5:
                    inventario.ordenarAlfabeticamente();
                    System.out.println("üìö Inventario ordenado alfab√©ticamente.");
                    break;

                case 6:
                    inventario.detectarDuplicados();
                    break;

                case 0:
                    System.out.println("üëã Gracias por usar el sistema.");
                    break;

                default:
                    System.out.println("‚ùó Opci√≥n inv√°lida.");
            }

        } while (opcion != 0);
    }
}


package modelo;

public class Usuario {
    private int id;
    private String nombre;
    private String email;
    private String contrase√±a;
    private String preferencias;

    public Usuario(String nombre, String email, String contrase√±a, String preferencias) {
        this.nombre = nombre;
        this.email = email;
        this.contrase√±a = contrase√±a;
        this.preferencias = preferencias;
    }

    // Getters y setters
    public String getNombre() { return nombre; }
    public String getEmail() { return email; }
    public String getContrase√±a() { return contrase√±a; }
    public String getPreferencias() { return preferencias; }
}

package modelo;

public class Videojuego {
    protected String titulo;
    protected String genero;
    protected String plataforma;
    protected String fechaAdquisicion;
    protected String estado;

    public Videojuego(String titulo, String genero, String plataforma, String fechaAdquisicion, String estado) {
        this.titulo = titulo;
        this.genero = genero;
        this.plataforma = plataforma;
        this.fechaAdquisicion = fechaAdquisicion;
        this.estado = estado;
    }

    public void mostrar() {
        System.out.println("T√≠tulo: " + titulo + ", Plataforma: " + plataforma + ", Estado: " + estado);
    }
}


package modelo;

public class VideojuegoFisico extends Videojuego {
    private String formato;

    public VideojuegoFisico(String titulo, String genero, String plataforma, String fecha, String estado, String formato) {
        super(titulo, genero, plataforma, fecha, estado);
        this.formato = formato;
    }

    @Override
    public void mostrar() {
        super.mostrar();
        System.out.println("Formato: " + formato);
    }
}


package modelo;

public interface InterfazRecomendador {
    void recomendar();
}


package modelo;
import java.util.ArrayList;

public class Inventario {
    private ArrayList<Videojuego> lista;

    public Inventario() {
        lista = new ArrayList<>();
    }

    public void agregar(Videojuego juego) {
        lista.add(juego);
    }

    public void mostrar() {
        for (Videojuego vj : lista) {
            vj.mostrar();
        }
public boolean eliminar(String titulo) {
    Iterator<Videojuego> iter = lista.iterator();
    while (iter.hasNext()) {
        if (iter.next().getTitulo().equalsIgnoreCase(titulo)) {
            iter.remove();
            return true;
        }
    }
    return false;
}

public void ordenarAlfabeticamente() {
    lista.sort(Comparator.comparing(Videojuego::getTitulo));
}

public void detectarDuplicados() {
    Map<String, Integer> contador = new HashMap<>();
    for (Videojuego vj : lista) {
        contador.put(vj.getTitulo(), contador.getOrDefault(vj.getTitulo(), 0) + 1);
    }
    boolean duplicado = false;
    for (Map.Entry<String, Integer> entry : contador.entrySet()) {
        if (entry.getValue() > 1) {
            System.out.println("‚ö† Juego duplicado: " + entry.getKey() + " (x" + entry.getValue() + ")");
            duplicado = true;
        }
    }
    if (!duplicado) {
        System.out.println("‚úÖ No hay juegos duplicados.");
    }
}
    }
}


package dao;

import java.sql.*;

public class ConexionBD {
    private static final String URL = "jdbc:mysql://localhost:3306/inventario_juegos";
    private static final String USUARIO = "root";
    private static final String CONTRASE√ëA = "";

    public static Connection conectar() throws SQLException {
        return DriverManager.getConnection(URL, USUARIO, CONTRASE√ëA);
    }
}


package dao;

import modelo.Usuario;
import java.sql.*;

public class UsuarioDAO {
    private Connection conn;

    public UsuarioDAO(Connection conn) {
        this.conn = conn;
    }

    public void registrar(Usuario u) throws SQLException {
        String sql = "INSERT INTO usuarios(nombre, email, contrase√±a, preferencias) VALUES (?, ?, ?, ?)";
        PreparedStatement stmt = conn.prepareStatement(sql);
        stmt.setString(1, u.getNombre());
        stmt.setString(2, u.getEmail());
        stmt.setString(3, u.getContrase√±a());
        stmt.setString(4, u.getPreferencias());
        stmt.executeUpdate();
    }
}


package dao;

import modelo.Videojuego;
import java.sql.*;

public class VideojuegoDAO {
    private Connection conn;

    public VideojuegoDAO(Connection conn) {
        this.conn = conn;
    }

    public boolean existeJuego(String titulo) throws SQLException {
        String sql = "SELECT COUNT(*) FROM videojuegos WHERE titulo = ?";
        PreparedStatement stmt = conn.prepareStatement(sql);
        stmt.setString(1, titulo);
        ResultSet rs = stmt.executeQuery();
        rs.next();
        return rs.getInt(1) > 0;
    }

    public void agregarJuego(Videojuego vj) throws SQLException {
        String sql = "INSERT INTO videojuegos(titulo, genero, plataforma, fecha_adquisicion, estado) VALUES (?, ?, ?, ?, ?)";
        PreparedStatement stmt = conn.prepareStatement(sql);
        stmt.setString(1, vj.titulo);
        stmt.setString(2, vj.genero);
        stmt.setString(3, vj.plataforma);
        stmt.setDate(4, Date.valueOf(vj.fechaAdquisicion));
        stmt.setString(5, vj.estado);
        stmt.executeUpdate();
    }
}
